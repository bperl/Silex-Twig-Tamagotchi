<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <title>Tamagotchi</title>
    </head>
    <body>
        <div class="container">
            {% if tam is defined %}
                <h1 class="jumbotron jumbotron-fluid text-center mt-3">About {{ tam.getName }}</h1>
                <h2>Food: {{ tam.getFood }}
                <h2>Attention: {{ tam.getAttention }}</h2>
                <h2>Rest: {{ tam.getRest }}</h2>


                {% if tam.getFood < 0 or tam.getAttention < 0 or tam.getRest < 0 %}
                <h2 class="mt-5 text-center">{{tam.name}} has died :(</h2>
                {% else %}
                <form class="mt-5">
                    <button type="submit" class="btn btn-success ml-3" formmethod="post" formaction="feed" {{tam.getFood > 10 ? 'disabled' : null}} >Feed</button>
                    <button type="submit" class="btn btn-success ml-3" formmethod="post" formaction="play" {{tam.getAttention > 10 ? 'disabled' : null}} >Play</button>
                    <button type="submit" class="btn btn-success ml-3" formmethod="post" formaction="rest" {{tam.getRest > 10 ? 'disabled' : null}} >Put to sleep</button>
                    <button type="submit" class="btn btn-warning ml-3" formmethod="post" formaction="time_elapsed" name="1">1 Hour elapsed</button>
                    <button type="submit" class="btn btn-danger ml-3" formmethod="post" formaction="time_elapsed" name="5">5 Hours elapsed</button>
                </form>
                {% endif %}
            {% endif %}

            {% if tam is not defined %}
            <h2 class="text-center">Enter a name for your Tamagotchi</h2>
                    <form action="new_tam" method="post" class="form-inline mt-5">
                        <div class="form-group-inline">
                            <input type="text" name="tam" class="form-control" placeholder="name">
                            <input class="btn btn-primary" type="submit">
                        </div>
                    </form>
            {% endif %}
        </div>
    </body>
</html>